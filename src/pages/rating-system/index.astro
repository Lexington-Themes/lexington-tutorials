---
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout>
  <section class="bg-white">
    <div
      class="w-full mx-auto max-w-xl flex flex-col lg:h-svh justify-center py-24 lg:py-96 relative p-8">
      <div
        class="prose text-gray-500 prose-sm prose-headings:font-normal prose-headings:text-xl">
        <div>
          <h1>Ratting system</h1>
          <p class="text-balance">
            Add your rating by clicking on any of the start and click again to
            remove it.
          </p>
        </div>
      </div>
      <div
        x-data="{ rating: 0, hoverIndex: 0 }"
        class="flex flex-col gap-4 w-full justify-center mx-auto mt-6 border-t pt-12">
        <!-- Display Stars -->
        <div class="flex flex-wrap gap-2">
          <template
            x-for="(star, index) in [1, 2, 3, 4, 5]"
            :key="index">
            <svg
              @mouseover="hoverIndex = index"
              @mouseleave="hoverIndex = 0"
              @click="rating = (rating === index) ? 0 : index"
              :class="{ 'text-orange-500': (index <= rating || index <= hoverIndex), 'text-gray-400': index > rating && index > hoverIndex }"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="w-6 h-6">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z"
              ></path>
            </svg>


          </template>
        </div>

        <!-- Display Current Rating -->
        <div class="mt-2">
          <span
            x-text="rating + ' stars'"
            class="text-gray-500"
          ></span>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
