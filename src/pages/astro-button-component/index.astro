            variant="accent"
            gap="xs"
            size="xs">
            <PlaceHolderIcon
              size="sm"
              slot="left-icon"
            />
            Button left icon
          </Button>
          <Button
            variant="accent"
            gap="xs"
            size="sm">
            <PlaceHolderIcon
              size="sm"
              slot="left-icon"
            />
            Button left icon
          </Button>
          <Button
            variant="accent"
            gap="sm"
            size="base">
            <PlaceHolderIcon
              size="base"
              slot="left-icon"
            />
            Button left icon
          </Button>
          <Button
            variant="accent"
            gap="xs"
            size="md">
            <PlaceHolderIcon
              size="base"
              slot="left-icon"
            />
            Button left icon
          </Button>
          <Button
            variant="accent"
            gap="xs"
            size="lg">
