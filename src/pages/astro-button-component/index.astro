        <!-- With right icon -->
        <div class="flex flex-wrap gap-4 py-8 mx-auto items-end">
          <Button
            variant="default"
            gap="xs"
            size="xs">
            <PlaceHolderIcon
              size="sm"
              slot="right-icon"
            />
            Button right icon
          </Button>
          <Button
            variant="default"
            gap="xs"
            size="sm">
            <PlaceHolderIcon
              size="sm"
