    />
    <Wrapper class="py-24">
      {
        changelogEntries.map((entry) => (
          <div class="border-t grid grid-cols-1 lg:grid-cols-3 gap-12 lg:gap-32  border-base-200">
            <div>
              <div class="top-20 lg:sticky lg:pb-16">
                <div class="pt-8">
                  <p>{entry.date}</p>
                </div>
              </div>
            </div>
            <div class="py-12  lg:col-span-2 text-base-500">
              <img
                class="aspect-[4/3] object-cover"
                src={entry.image}
                alt="#_"
              />
              <h1 class="mt-2 text-base">{entry.title}</h1>
              <p class="text-sm line-clamp-2">{entry.description}</p>
            </div>
          </div>
        ))
      }
      <!-- Ends component -->
    </Wrapper>
  </section>
