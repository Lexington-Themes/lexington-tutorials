---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import TutorialBanner from "@/components/global/TutorialBanner.astro";
import {
  generateArticleSchema,
  generateBreadcrumbSchema,
  generateHowToSchema,
} from "@/utils/jsonLd";

// SEO Configuration
const seoConfig = {
  title: "Your Page Title Here (Max 60 chars)",
  description:
    "Your page description here. Keep it under 160 characters for optimal SEO display in search results.",
  canonical: "/your-page-url",
  jsonLd: [
    generateArticleSchema({
      title: "Your Page Title Here",
      description: "Your page description here.",
      url: "/your-page-url",
      datePublished: new Date().toISOString(),
      dateModified: new Date().toISOString(),
      keywords: [
        "Keyword1",
        "Keyword2",
        "Keyword3",
        "Tutorial",
        "Web Development",
      ],
    }),
    generateBreadcrumbSchema([
      { name: "Home", url: "/" },
      { name: "Your Page Title Here", url: "/your-page-url" },
    ]),
    generateHowToSchema({
      name: "Your Page Title Here",
      description: "Your page description here.",
      totalTime: "PT20M", // ISO 8601 duration format (PT20M = 20 minutes)
      steps: [
        {
          name: "Step 1",
          text: "Description of step 1",
        },
        {
          name: "Step 2",
          text: "Description of step 2",
        },
        {
          name: "Step 3",
          text: "Description of step 3",
        },
        {
          name: "Step 4",
          text: "Description of step 4",
        },
        {
          name: "Step 5",
          text: "Description of step 5",
        },
      ],
    }),
  ],
};
---

<BaseLayout seo={seoConfig}>
  <h1 class="sr-only">Your Page Title Here</h1>

  <!-- Tutorial Banner (optional - update URLs) -->
  <TutorialBanner
    tutorialUrl="https://lexingtonthemes.com/tutorials/your-tutorial-url"
    codeUrl="https://github.com/Lexington-Themes/lexington-tutorials/blob/main/src/pages/your-page-url/index"
  />

  <!-- Your page content starts here -->
  <Wrapper class="py-24 lg:py-32">
    <div class="container mx-auto">
      <h2 class="text-4xl font-bold mb-8">Your Component Title</h2>

      <!-- Add your component/tutorial content here -->
    </div>
  </Wrapper>
</BaseLayout>

<!-- 
  TEMPLATE USAGE INSTRUCTIONS
  ============================
  
  1. Copy this file to your new page location:
     cp src/pages/_template.astro src/pages/new-page-name/index
  
  2. Update the SEO configuration:
     - title: Keep under 60 characters
     - description: Keep under 160 characters
     - canonical: Use the page URL (e.g., "/new-page-name")
     - keywords: 5-7 relevant keywords
  
  3. Update the H1 tag to match your title
  
  4. Update the TutorialBanner URLs
  
  5. Add your component/tutorial content
  
  6. Run the SEO audit to verify:
     npm run seo:check
  
  TITLE PATTERNS:
  ===============
  Alpine.js: "Create [Component] - Alpine.js" (e.g., "Create Modal Dialog - Alpine.js")
  JavaScript: "Create [Component] - JavaScript" (e.g., "Build Carousel - JavaScript")
  Tailwind: "Create [Component] - Tailwind" (e.g., "Create Bento Grid - Tailwind")
  
  DURATION FORMAT:
  ================
  PT20M = 20 minutes
  PT1H = 1 hour
  PT1H30M = 1 hour 30 minutes
  PT45M = 45 minutes
-->
