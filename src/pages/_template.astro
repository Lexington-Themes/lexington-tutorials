---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import TutorialBanner from "@/components/global/TutorialBanner.astro";
import {
  generateArticleSchema,
  generateBreadcrumbSchema,
  generateHowToSchema,
} from "@/utils/jsonLd";

// SEO Configuration
const seoConfig = {
  title: "How to Create [COMPONENT] with Tailwind CSS and [FRAMEWORK]",
  description:
    "Learn how to build [COMPONENT] using Tailwind CSS and [FRAMEWORK]. [BRIEF DESCRIPTION OF WHAT THEY'LL LEARN].",
  canonical: "/[PAGE-URL]",
  jsonLd: [
    generateArticleSchema({
      title: "How to Create [COMPONENT] with Tailwind CSS and [FRAMEWORK]",
      description: "Complete guide to building [COMPONENT] with [FRAMEWORK]",
      url: "/[PAGE-URL]",
      datePublished: "2024-XX-XXTXX:XX:XXZ", // Use current date in ISO 8601 format
      dateModified: "2024-XX-XXTXX:XX:XXZ",
      keywords: [
        "Tailwind CSS",
        "[FRAMEWORK]", // e.g., Alpine.js, JavaScript, Astro
        "[COMPONENT]", // e.g., Modal, Carousel, Accordion
        "[FEATURE]", // e.g., Animation, Interactive
        "Tutorial",
        "Web Development",
      ],
    }),
    generateBreadcrumbSchema([
      { name: "Home", url: "/" },
      { name: "[PAGE NAME]", url: "/[PAGE-URL]" },
    ]),
    generateHowToSchema({
      name: "Create [COMPONENT] with Tailwind CSS and [FRAMEWORK]",
      description: "Step-by-step guide to building [COMPONENT]",
      totalTime: "PTXXM", // e.g., PT15M for 15 minutes, PT1H for 1 hour
      steps: [
        {
          name: "[STEP 1 TITLE]",
          text: "[STEP 1 DESCRIPTION]",
        },
        {
          name: "[STEP 2 TITLE]",
          text: "[STEP 2 DESCRIPTION]",
        },
        {
          name: "[STEP 3 TITLE]",
          text: "[STEP 3 DESCRIPTION]",
        },
        // Add more steps as needed
      ],
    }),
  ],
};
---

<BaseLayout seo={seoConfig}>
  <section>
    <TutorialBanner
      tutorialUrl="[LEXINGTON THEMES TUTORIAL URL]"
      codeUrl="https://github.com/Lexington-Themes/lexington-tutorials/blob/main/src/pages/[PAGE-URL]/index.astro"
    />
    <Wrapper class="py-24 lg:py-48">
      <!-- Your component code here -->
    </Wrapper>
  </section>
</BaseLayout>

