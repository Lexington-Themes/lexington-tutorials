---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Button from "@/components/fundations/elements/Button.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import TutorialBanner from "@/components/global/TutorialBanner.astro";
---

<BaseLayout>
  <section>
    <!-- Starts links to tutorial -->
    <TutorialBanner
      tutorialUrl="https://lexingtonthemes.com/tutorials/how-to-create-a-flyout-menu-with-astrojs-tailwind-css-and-javascript"
      codeUrl="https://github.com/Lexington-Themes/lexington-tutorials/blob/main/src/pages/js-flyout-menu/index.astro"
    />
    <!-- Ends links to tutorial -->
    <Wrapper class="py-24">
      <!-- Decorative image -->

      <div class="flex flex-col items-center h-svh">
        <div>
          <!-- Button to toggle the dropdown menu visibility -->
          <Button size="sm" variant="accent" id="flyoutButton">
            I am your flyout menu
          </Button>
          <!-- Dropdown Menu -->
          <div
            id="flyoutMenu"
            class="absolute z-10 hidden w-screen max-w-xs px-2 mt-3 transform -translate-x-1/2 left-1/2"
          >
            <div
              class="overflow-hidden shadow-lg rounded-2xl ring-1 ring-base-200 ring-opacity-5"
            >
              <!-- Container for link items -->
              <div
                class="relative px-5 py-6 text-left bg-white grid gap-6 sm:gap-8 sm:p-8"
              >
                <div class="space-y-4">
                  <a href="#">
                    <div class="py-2 group">
                      <p
                        class="text-base font-medium text-base-500 group-hover:text-base-600"
                      >
                        Explore design work
                      </p>
                      <p class="mt-1 text-sm text-base-500">
                        Trending designs to inspire you
                      </p>
                    </div>
                  </a>
                  <a href="#">
                    <div class="py-2 group">
                      <p
                        class="text-base font-medium text-base-500 group-hover:text-base-600"
                      >
                        Blog
                      </p>
                      <p class="mt-1 text-sm text-base-500">
                        Interviews, tutorials and more
                      </p>
                    </div>
                  </a>
                  <a href="#">
                    <div class="py-2 group">
                      <p
                        class="text-base font-medium text-base-500 group-hover:text-base-600"
                      >
                        Secure
                      </p>
                      <p class="mt-1 text-sm text-base-500">
                        Secure your data efficiently
                      </p>
                    </div>
                  </a>
                  <a href="#">
                    <div class="py-2 group">
                      <p
                        class="text-base font-medium text-base-500 group-hover:text-base-600"
                      >
                        Users
                      </p>
                      <p class="mt-1 text-sm text-base-500">
                        User engagement strategies
                      </p>
                    </div>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </Wrapper>
  </section>
</BaseLayout>
<script type="module">
  document.addEventListener("DOMContentLoaded", function () {
    const button = document.getElementById("flyoutButton");
    const menu = document.getElementById("flyoutMenu");
    button.addEventListener("click", function (event) {
      event.stopPropagation(); // Prevent click event from bubbling up
      menu.classList.toggle("hidden");
    });
    document.addEventListener("click", function (event) {
      if (!menu.contains(event.target)) {
        menu.classList.add("hidden");
      }
    });
  });
</script>
