---
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout>
  <section
    class="bg-white relative overflow-hidden"
    x-data="{ isOpen: false }">
    <div
      class="w-full mx-auto 2xl:max-w-7xl flex flex-col justify-center py-24  relative p-8">
      <div
        class="prose text-gray-500 prose-sm prose-headings:font-normal prose-headings:text-xl mx-auto max-w-sm w-full">
        <div>
          <h1>Bottom drawer</h1>
          <p class="text-balance">
            Click on the button to open the bottom drawer.
          </p>
        </div>
      </div>
      <div class="mt-6 border-t pt-12 max-w-sm mx-auto w-full">
        <!-- Starts component -->
        <button
          @click="isOpen = !isOpen"
          class="rounded-full bg-orange-600 px-8 py-2 h-12 text-sm font-semibold text-white hover:bg-orange-500 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:ring-offset-2 w-full">
          Toggle Drawer
        </button>
        <div>
          <!-- Button to toggle the bottom drawer -->

          <!-- Bottom drawer container with transition -->
          <div
            x-show="isOpen"
            @click.away="isOpen = false"
            class="fixed inset-x-0 bottom-0 flex flex-col justify-between gap-x-8 gap-y-4 bg-white p-8 ring-1 ring-gray-900/10 md:flex-row md:items-center lg:p-20">
            <div
              x-transition:enter="transition ease-out duration-300"
              x-transition:enter-start="transform opacity-0 translate-y-full"
              x-transition:enter-end="transform opacity-100 translate-y-0"
              x-transition:leave="transition ease-in duration-300"
              x-transition:leave-start="transform opacity-100 translate-y-0"
              x-transition:leave-end="transform opacity-0 translate-y-full"
              class="flex flex-col lg:flex-row gap-12 justify-between w-full">
              <!-- Drawer content -->
              <p class="max-w-4xl text-sm leading-6 text-gray-500">
                Our website employs cookies to enhance a well-rounded diet,
                serving as a delightful treat for your senses following the
                intake of wholesome yet unexciting meals. Opting in to enjoy our
                cookies is not mandatory but is advised for a tasteful
                experience.
                <span class="block mt-2">
                  See our <a
                    href="#"
                    class="font-semibold text-indigo-600"
                    >cookie policy</a
                  >.
                </span>
              </p>
              <div class="flex flex-none items-center gap-x-5">
                <button
                  type="button"
                  class="rounded-full bg-orange-600 px-8 py-2 h-12 text-sm font-semibold text-white hover:bg-orange-500 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:ring-offset-2"
                  >Accept all</button
                >
                <button
                  type="button"
                  class="text-sm font-semibold leading-6 text-gray-900"
                  >Reject all</button
                >
              </div>
            </div>
          </div>
        </div>
        <!-- Ends component -->
      </div>
    </div>
  </section>
</BaseLayout>
