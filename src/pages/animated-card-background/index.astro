---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import TutorialBanner from "@/components/global/TutorialBanner.astro";
import {
  generateArticleSchema,
  generateBreadcrumbSchema,
  generateHowToSchema,
} from "@/utils/jsonLd";

// SEO Configuration
const seoConfig = {
  title: "How to Create Cards with Tailwind CSS and Tailwind CSS",
  description: "Learn to build card components using Tailwind CSS and Tailwind CSS. Includes hover effects and responsive layout.",
  canonical: "/animated-card-background",
  jsonLd: [
    generateArticleSchema({
      title: "How to Create Cards with Tailwind CSS and Tailwind CSS",
      description: "Learn to build card components using Tailwind CSS and Tailwind CSS. Includes hover effects and responsive layout.",
      url: "/animated-card-background",
      datePublished: "2025-10-01T06:22:29.066Z",
      dateModified: "2025-10-01T06:22:29.066Z",
      keywords: ["Tailwind CSS","Card","Tutorial","Web Development","Animation"],
    }),
    generateBreadcrumbSchema([
      { name: "Home", url: "/" },
      { name: "How to Create Cards with Tailwind CSS and Tailwind CSS", url: "/animated-card-background" },
    ]),
    generateHowToSchema({
      name: "How to Create Cards with Tailwind CSS and Tailwind CSS",
      description: "Learn to build card components using Tailwind CSS and Tailwind CSS. Includes hover effects and responsive layout.",
      totalTime: "PT15M",
      steps: [
            {
                  "name": "Set up HTML structure",
                  "text": "Create the base card container and elements"
            },
            {
                  "name": "Add Tailwind CSS interactivity",
                  "text": "Initialize Tailwind CSS to handle component state and interactions"
            },
            {
                  "name": "Style with Tailwind CSS",
                  "text": "Apply utility classes for responsive layout and modern design"
            },
            {
                  "name": "Add accessibility features",
                  "text": "Implement ARIA attributes and keyboard navigation"
            },
            {
                  "name": "Test the component",
                  "text": "Verify functionality across different browsers and devices"
            }
      ],
    }),
  ],
};
---

<BaseLayout seo={seoConfig}>
  <section>
  <h1 class="sr-only">How to Create Cards with Tailwind CSS and Tailwind CSS</h1>

    <TutorialBanner
      tutorialUrl="https://lexingtonthemes.com/tutorials/how-tocreate-a-card-with-animated-background-with-tailwind-css/"
      codeUrl="https://github.com/Lexington-Themes/lexington-tutorials/blob/main/src/pages/theme-toggle/index.astro"
    />

    <Wrapper class="py-24 lg:py-48">
      <div
        class="relative z-0 w-full h-full max-w-xl p-2 m-auto overflow-hidden cursor-pointer bg-base-50 rounded-xl group hover:border-transparent"
      >
        <div
          class="h-24 w-96 bg-base-950 absolute left-full rounded-full -bottom-12 group-hover:scale-[550%] z-[-1] duration-700 easy-in-out"
        >
        </div>
        <div
          class="h-20 w-44 bg-base-700 absolute left-full rounded-full -bottom-12 group-hover:scale-[400%] z-[-1] duration-700 easy-in-out"
        >
        </div>
        <div
          class="h-16 w-48 bg-base-500 absolute left-full rounded-full -bottom-12 group-hover:scale-[300%] z-[-1] duration-700 easy-in-out"
        >
        </div>
        <div
          class="h-16 w-44 bg-base-950 absolute left-full rounded-full -bottom-12 group-hover:scale-[200%] z-[-1] duration-700 easy-in-out"
        >
        </div>

        <div class="z-20 m-4">
          <div class="">
            <p
              class="text-lg font-semibold text-base-950 group-hover:text-white duration-300"
            >
              Uber will pay you $1,000 to ditch your car for five weeks
            </p>
            <p
              class="mt-20 text-base text-base-500 group-hover:text-white duration-300 text-pretty"
            >
              Traffic got you down? If the idea of locking your car keys in a
              drawer and using alternate means of transportation sounds
              intriguing, Uber has the challenge for you.
            </p>
          </div>
        </div>
      </div>
    </Wrapper>
  </section>
</BaseLayout>
