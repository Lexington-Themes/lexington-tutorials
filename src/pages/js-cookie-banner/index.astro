---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import TutorialBanner from "@/components/global/TutorialBanner.astro";
---

<BaseLayout>
  <section>
    <!-- Starts links to tutorial -->
    <TutorialBanner
      tutorialUrl="https://lexingtonthemes.com/tutorials/how-to-create-a-dissmisable-cookie-banner-with-tailwind-css-and-javascript/"
      codeUrl="https://github.com/Lexington-Themes/lexington-tutorials/blob/main/src/pages/js-cookie-banner/index.astro"
    />
    <!-- Ends links to tutorial -->
    <Wrapper class="py-24 h-svh">
      <!-- Starts component -->
      <div
        id="cookie-banner"
        role="dialog"
        aria-labelledby="cookieBannerTitle"
        aria-describedby="cookieBannerDesc"
        class="fixed inset-0 flex items-center justify-center bg-opacity-50"
      >
        <!-- Cookie banner content container -->
        <div
          class="max-w-lg p-8 mx-auto text-center bg-white shadow-xl lg:p-10 rounded-3xl ring-1 ring-base-200"
        >
          <img
            src="https://i.pinimg.com/originals/ef/86/cf/ef86cfbac3952cbfdaacb66e8ca3b685.gif"
            alt="Cookies"
            class="w-32 h-32 mx-auto -mt-24 rounded-full"
          />
          <h2 id="cookieBannerTitle" class="mt-8 text-2xl font-medium">
            Our website uses cookies
          </h2>
          <p id="cookieBannerDesc" class="mt-4 text-base-500">
            Our website uses cookies. By continuing, we assume your permission
            to deploy cookies as detailed in our
            <a href="#" class="text-black underline hover:text-accent-600"
              >Privacy Policy.</a
            >
          </p>
          <!-- Accept cookies button -->
          <div class="mt-8">
            <button
              id="accept-cookies"
              class="h-12 px-8 py-2 text-sm font-semibold text-white rounded-full bg-accent-600 hover:bg-accent-500 focus:outline-none focus:ring-2 focus:ring-accent-500 focus:ring-offset-2"
            >
              Accept all cookies
            </button>
          </div>
          <!-- Manage cookies link -->
          <div class="mt-4">
            <a href="#" class="text-sm text-accent-600 hover:text-accent-500"
              >Manage cookies</a
            >
          </div>
        </div>
      </div>

      <!-- Ends component -->
    </Wrapper>
  </section>
</BaseLayout>

<script type="module">
  document.addEventListener("DOMContentLoaded", function () {
    const cookieBanner = document.getElementById("cookie-banner");
    const acceptButton = document.getElementById("accept-cookies");

    // Set focus on the accept button once the banner is displayed
    acceptButton.focus();

    // Hide the cookie banner when the accept button is clicked
    acceptButton.addEventListener("click", function () {
      cookieBanner.style.display = "none";
    });
  });
</script>
