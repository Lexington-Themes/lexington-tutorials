  jsonLd: [
    generateArticleSchema({
      title: "Create Simplified Markup with Tailwind CSS",
      description:
        "Learn to build simplified markup components using Tailwind CSS. Includes responsive design and modern styling.",
      url: "/simplified-markup",
      datePublished: "2025-10-01T06:26:58.393Z",
