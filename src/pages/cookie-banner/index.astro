---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import TutorialBanner from "@/components/global/TutorialBanner.astro";
import {
  generateArticleSchema,
  generateBreadcrumbSchema,
  generateHowToSchema,
} from "@/utils/jsonLd";

// SEO Configuration
const seoConfig = {
  title: "How to Create a Banner with Alpine.js and Tailwind CSS",
  description: "Learn to build banner components using Alpine.js and Tailwind CSS. Includes dismissible and animations.",
  canonical: "/cookie-banner",
  jsonLd: [
    generateArticleSchema({
      title: "How to Create a Banner with Alpine.js and Tailwind CSS",
      description: "Learn to build banner components using Alpine.js and Tailwind CSS. Includes dismissible and animations.",
      url: "/cookie-banner",
      datePublished: "2025-10-01T06:22:29.070Z",
      dateModified: "2025-10-01T06:22:29.070Z",
      keywords: ["Tailwind CSS","Alpine.js","Banner","Tutorial","Web Development"],
    }),
    generateBreadcrumbSchema([
      { name: "Home", url: "/" },
      { name: "How to Create a Banner with Alpine.js and Tailwind CSS", url: "/cookie-banner" },
    ]),
    generateHowToSchema({
      name: "How to Create a Banner with Alpine.js and Tailwind CSS",
      description: "Learn to build banner components using Alpine.js and Tailwind CSS. Includes dismissible and animations.",
      totalTime: "PT10M",
      steps: [
            {
                  "name": "Set up HTML structure",
                  "text": "Create the base banner container and elements"
            },
            {
                  "name": "Add Alpine.js interactivity",
                  "text": "Initialize Alpine.js to handle component state and interactions"
            },
            {
                  "name": "Style with Tailwind CSS",
                  "text": "Apply utility classes for responsive layout and modern design"
            },
            {
                  "name": "Add accessibility features",
                  "text": "Implement ARIA attributes and keyboard navigation"
            },
            {
                  "name": "Test the component",
                  "text": "Verify functionality across different browsers and devices"
            }
      ],
    }),
  ],
};
---

<BaseLayout seo={seoConfig}>
  <section>
  <h1 class="sr-only">How to Create a Banner with Alpine.js and Tailwind CSS</h1>

    <TutorialBanner
      tutorialUrl="https://lexingtonthemes.com/tutorials/how-to-create-a-dissmisable-cookie-banner-with-tailwind-css-and-alpinejs"
      codeUrl="https://github.com/Lexington-Themes/lexington-tutorials/blob/main/src/pages/cookie-banner/index.astro"
    />
    <Wrapper class="py-24 lg:py-48">
      <!--
       // Alpine JS component for cookie banner
       // Initializes component state with `showAlert` to manage visibility
       // Focus management; focuses the 'Accept' button on init if `showAlert` is true
       // ARIA role for accessibility; marks this as a dialog for screen readers
       // ARIA attribute to associate the dialog with its title for screen readers
       // Controls the visibility of the cookie banner based on `showAlert`
       // ARIA attribute to associate the dialog with its description for screen readers
      -->
      <div
        x-data="{ showAlert: true }"
        x-init="$nextTick(() => { if (showAlert) $refs.firstButton.focus() })"
        x-show="showAlert"
        role="dialog"
        aria-labelledby="cookieBannerTitle"
        aria-describedby="cookieBannerDesc"
      >
        <!-- Cookie banner content container -->
        <div
          class="max-w-lg p-8 mx-auto text-center lg:p-10 rounded-3xl bg-base-50"
        >
          <img
            src="https://i.pinimg.com/originals/ef/86/cf/ef86cfbac3952cbfdaacb66e8ca3b685.gif"
            alt="Cookies"
            class="w-32 h-32 mx-auto -mt-24 rounded-full"
          />
          <h2 id="cookieBannerTitle" class="mt-8 text-2xl font-medium">
            Our website uses cookies
          </h2>
          <p id="cookieBannerDesc" class="mt-4 text-base-500">
            Our website uses cookies. By continuing, we assume your permission
            to deploy cookies as detailed in our
            <a href="#_" class="text-black underline hover:text-accent-600"
              >Privacy Policy.</a
            >
          </p>
          <!--
           // Accept cookies button
           // Alpine JS reference for initial focus
           // Click event handler that updates `showAlert` to hide the banner -->
          <div class="mt-8">
            <button
              x-ref="firstButton"
              @click="showAlert = false"
              class="h-12 px-8 py-2 text-sm text-white rounded-full bg-accent-600 font-semibold
  hover:bg-accent-500 focus:outline-none focus:ring-2 focus:ring-accent-500
 focus:ring-offset-2"
            >
              Accept all cookies
            </button>
          </div>
          <!-- Manage cookies link -->
          <div class="mt-4">
            <a href="#_" class="text-sm text-accent-600 hover:text-accent-500"
              >Manage cookies</a
            >
          </div>
        </div>
      </div>
    </Wrapper>
  </section>
</BaseLayout>
