---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import TutorialBanner from "@/components/global/TutorialBanner.astro";
---

<BaseLayout>
  <TutorialBanner
    tutorialUrl="https://lexingtonthemes.com/tutorials/how-to-change-background-coloron-scroll-with-tailwind-css-and-alpinejs"
    codeUrl="https://github.com/Lexington-Themes/lexington-tutorials/blob/main/src/pages/change-on-scroll/index.astro"
  />
  <Wrapper class="relative py-24">
    <div
      x-data="{ scroll: false }"
      @scroll.window="scroll = (window.pageYOffset > 50) ? true : false"
      :class="{ 'bg-white': scroll, 'bg-transparent': !scroll }"
      class="w-full text-center transition-colors duration-500 ease-in-out"
    >
      Scroll
    </div>
    <!--
      The sections have a fixed height (h-svh) and padding (p-20).
      The first section has additional top padding (pt-80) to account for the fixed header.
      Each section changes its background color based on the scroll position.
      -->
    <section
      x-data="{ scroll: false }"
      @scroll.window="scroll = (window.pageYOffset > 50) ? true : false"
      :class="{ 'bg-[#e9e9e9]': scroll, 'bg-white': !scroll }"
      class="flex flex-col items-center justify-center p-20 text-4xl h-svh 2xl:text-8xl pt-80 transition-colors duration-500 ease-in-out"
    >
      <h2>Section #01</h2>
    </section>
    <section
      x-data="{ scroll: false }"
      @scroll.window="scroll = (window.pageYOffset > 150) ? true : false"
      :class="{ 'bg-[#f92c1c]': scroll, 'bg-white': !scroll }"
      class="flex flex-col items-center justify-center p-20 text-4xl h-svh 2xl:text-8xl transition-colors duration-500 ease-in-out"
    >
      <h2 class="text-white">Section #02</h2>
    </section>
    <section
      x-data="{ scroll: false }"
      @scroll.window="scroll = (window.pageYOffset > 250) ? true : false"
      :class="{ 'bg-[#000000]': scroll, 'bg-white': !scroll }"
      class="flex flex-col items-center justify-center p-20 text-4xl h-svh 2xl:text-8xl transition-colors duration-500 ease-in-out"
    >
      <h2 class="text-white">Section #03</h2>
    </section>
  </Wrapper>
</BaseLayout>
