---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import TutorialBanner from "@/components/global/TutorialBanner.astro";
---

<BaseLayout>
  <section>
    <TutorialBanner
      tutorialUrl="https://lexingtonthemes.com/tutorials/how-to-create-a-bento-grid-with-tailwind-css/"
      codeUrl="https://github.com/Lexington-Themes/lexington-tutorials/blob/main/src/pages/bento-grid/index.astro"
    />
    <Wrapper class="py-24">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-2 lg:grid-cols-6">
        <!-- Large box spanning 2x2 -->
        <div class="p-6 bg-base-50 rounded-xl md:col-span-2 md:row-span-2">
          <p class="text-accent-500">Photography</p>
          <p class="mt-4 text-sm">
            Capture moments in stunning detail with our advanced camera
            technology. Perfect for professionals and enthusiasts alike.
          </p>
        </div>

        <!-- Tall box spanning 3 rows -->
        <div class="p-6 bg-base-50 rounded-xl md:row-span-2">
          <p class="text-accent-500">Coding</p>
          <p class="mt-4 text-sm">
            Build the future with powerful development tools. From web to
            mobile, create anything you can imagine.
          </p>
        </div>

        <!-- Regular box -->
        <div class="p-6 bg-base-50 rounded-xl md:row-span-3 lg:row-span-2">
          <p class="text-accent-500">Music</p>
          <p class="mt-4 text-sm">
            Experience the power of sound with high-fidelity audio.
          </p>
        </div>

        <!-- Wide box spanning 2 columns -->
        <div class="p-6 bg-base-50 rounded-xl md:col-span-2">
          <p class="text-accent-500">Video Production</p>
          <p class="mt-4 text-sm">
            Create cinematic masterpieces with professional-grade tools.
          </p>
        </div>

        <!-- Tall box spanning 2 rows -->
        <div class="p-6 bg-base-50 rounded-xl md:row-span-2 lg:col-span-2">
          <p class="text-accent-500">Gaming</p>
          <p class="mt-4 text-sm">
            Immerse yourself in new worlds with cutting-edge graphics and
            gameplay.
          </p>
        </div>

        <!-- Regular boxes -->
        <div class="p-6 bg-base-50 rounded-xl md:col-span-2">
          <p class="text-accent-500">AI</p>
          <p class="mt-4 text-sm">
            Harness the power of artificial intelligence.
          </p>
        </div>
        <div class="p-6 bg-base-50 rounded-xl lg:col-span-2">
          <p class="text-accent-500">VR</p>
          <p class="mt-4 text-sm">
            Step into virtual reality and explore new dimensions.
          </p>
        </div>

        <!-- Wide box spanning 3 columns -->
        <div class="p-6 bg-base-50 rounded-xl md:col-span-3">
          <p class="text-accent-500">IoT Ecosystem</p>
          <p class="mt-4 text-sm">
            Connect your world with smart devices. Create a seamless network of
            intelligent gadgets.
          </p>
        </div>

        <!-- Regular boxes -->
        <div class="p-6 bg-base-50 rounded-xl lg:col-span-2">
          <p class="text-accent-500">Cloud</p>
          <p class="mt-4 text-sm">
            Scale your projects with powerful cloud solutions.
          </p>
        </div>
        <div class="p-6 bg-base-50 rounded-xl col-span-full lg:col-span-1">
          <p class="text-accent-500">Security</p>
          <p class="mt-4 text-sm">
            Protect your digital assets with advanced cybersecurity.
          </p>
        </div>
      </div>
    </Wrapper>
  </section>
</BaseLayout>
