---
const { title, url, description, pubDate, author } = Astro.props;
---

<a href={url} title={title}>
  <div class="sm:flex items-center">
    <div>
      <div
        class="inline-flex items-center text-xs text-zinc-500 dark:text-zinc-400">
        <span>{author}</span>
        <time class="ml-3" datetime={pubDate}>{pubDate}</time>
      </div>
      <h4
        class="text-lg mt-2 lg:text-xl text-black dark:text-white uppercase     ">
        {title}
      </h4>
      <p class="mt-3 text-zinc-500 dark:text-zinc-400">
        {description}
      </p>
    </div>
  </div>
</a>
